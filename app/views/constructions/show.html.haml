.page-header
  .row
    .col-lg-12
      %h3
        =  @construction.title
        %small
          administrada por 
          = link_to @construction.manager.name, user_path(@construction.manager)
          //= link_to 'Administrar',edit_construction_path(@construction),class: 'btn btn-default'
  .row
    .col-lg-12
      .progress.cons-st-prog
        - if @construction.available_days > @construction.days_passed
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{}", role: "progressbar", style: "width: #{percentage_of_number(@construction.days_passed, @construction.available_days)}%;", class: "#{days_bar_tag_class(@construction)}"}
            //= [@construction.days_passed, @construction.available_days].join("/") + " Dias"
      %h6.text-center.construction-special-date
        %span.text-muted
          = "Desde "
        %span.text-info
          = spanish_formated_date(@construction.start_date, false)
        %span.text-muted
          = " hasta "
        %span.text-info
          = spanish_formated_date(@construction.finish_date, false)
.page-header
  .row
    .col-sm-4
      %h4.text-center.cons-inf-title
        %span.text-muted
          Extensión
        %span.text-muted
          %strong
            Falta metodo
            // = number_to_currency(@construction.extensions_amount)
      %h5.text-center.cons-inf-title-sub
        %span.text-muted
          = link_to @construction.extensions.count, extensions_path(construction_id: @construction)
          Extensiones,
          = link_to "Agregar nueva", new_extension_path(construction_id: @construction)
    .col-sm-4
      %h4.text-center.cons-inf-title
        %span.text-muted
          Contrato
        %span.text-muted
          %strong
            Falta metodo
            //= number_to_currency(@construction.contract_extended_amount)
      %h5.text-center.cons-inf-title-sub
        %span.text-muted
          Contrato original
        %span.text-muted
          %strong
            = number_to_currency(@construction.contract_amount)
    .col-sm-4
      %h4.text-center.cons-inf-title
        %span.text-muted
          Estimación
        %span.text-muted
          %strong
            = number_to_currency(@construction.estimates_amount)
      %h5.text-center.cons-inf-title-sub
        %span.text-muted
          = link_to @construction.estimates.count, estimates_path(construction_id: @construction)
          Estimaciones,
          = link_to "Agregar nueva", new_estimate_path(construction_id: @construction)
.page-header
  - expenses = @construction.expenses
  - paid = @construction.paid
  .row
    .col-sm-4
      %h4.text-center.cons-inf-title
        %span.text-muted
          Gasto total
        %span.text-muted
          %strong
            = number_to_currency expenses
    .col-sm-4
      %h4.text-center.cons-inf-title
        %span.text-muted
          Pago total
        %span.text-muted
          %strong
            = number_to_currency paid
    .col-sm-4
      %h4.text-center.cons-inf-title
        %span.text-muted
          Saldo
        %span.text-muted
          %strong
            = number_to_currency expenses - paid
.page-header
  .row
    .col-sm-6
      %h4.text-center.cons-inf-title
        %span.text-success
          = @construction.partial_requisitions.count + @construction.complete_requisitions.count
        %span.text-muted
          = link_to "Requisiciones", requisitions_path(construction_id: @construction)
          procesadas
      %h5.text-center.cons-inf-title
        %span.text-warning
          = @construction.pending_requisitions.count
        %span.text-muted
          Requisiciones pendientes
    .col-sm-6
      %h4.text-center.cons-inf-title
        %span.text-success
          = @construction.invoiced_purchases_orders.count
        %span.text-muted
          = link_to "Ordenes de compra", purchase_orders_path(construction_id: @construction)
          facturadas
      %h5.text-center.cons-inf-title
        %span.text-warning
          = @construction.pending_requisitions.count
        %span.text-muted
          Ordenes de compra sin facturar

%h3.text-center.text-muted
  Gastos

= render :partial => 'payment_tabs'
.panel.panel-default
  .table-responsive
    %table.table.table-hover
      %thead
        %tr
          %th
            Factura
          %th
            Orden de compra
          %th
            Importe
          %th
            Pagado
          %th
            Saldo
          %th
            Pagos
          %th
      %tbody#payments
        = render partial: 'payment', collection: @payments
