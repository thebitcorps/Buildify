- if params[:status] == 'running'
  $('#running').attr('class', "active");
  $('#finished').attr('class', "");
  $('#all').attr('class', "");
- elsif params[:status] == 'finished'
  $('#running').attr('class', "");
  $('#finished').attr('class', "active");
  $('#all').attr('class', "");
-else
  $('#running').attr('class', "");
  $('#finished').attr('class', "");
  $('#all').attr('class', "active");

- if @mode == :own
  $('#constructions').html("#{j( render partial: 'construction_own', collection: @constructions)}");
- if @mode == :sub
  $('#constructions').html("#{j( render partial: 'construction_sub', collection: @constructions)}");
- if @mode == :all
  $('#constructions').html("#{j( render partial: 'construction', collection: @constructions)}");


$('#paginate').html("#{j( paginate @constructions,theme: 'twitter-bootstrap-3', remote: true)}");
