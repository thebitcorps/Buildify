.jumbotron
  %h2
    = @user.name
    -##refactor for showing spanish role
    %small= @user.role_list[0]
  %p
    %b Phone:
    = @user.phone
  %p
    %b Email:
    = @user.email

  = link_to 'Change password',edit_password_users_path,class: 'btn btn-warning' if current_user == @user

  = link_to 'Edit', edit_user_path(@user),class: 'btn btn-warning'

  = link_to 'Back', users_path,class: 'btn btn-default'


%h2=" Obras que administro #{@user.name}"

.list-group#constructions
  = render partial: 'constructions/construction', collection: @user.construction_administrations
  - if @user.construction_administrations.empty?
    .well
      No a administrado obras

%h2 Obras que a apoyado
.list-group#constructions
  = render partial: 'constructions/construction', collection: @user.constructions
  - if @user.constructions.empty?
    .well
      No a apoyado obras
