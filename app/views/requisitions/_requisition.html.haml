%a.list-group-item.construction-special-row{:href => "#{requisition_path(requisition)}"}
  .row
    .col-md-12
      %h4.pull-right
        %small
          - if requisition.complete? || requisition.partially?
            Procesada
          - else
            = distance_of_time_in_words(Time.now , requisition.requisition_date)
      %table
        %tr
          %td
            %h4
              %span{class: "label label-#{requisition.status_color}"}
                = requisition.formated_folio
          %td
            %h4
              %small
                = [requisition.item_materials.count, " materiales agregados"].join(' ')
