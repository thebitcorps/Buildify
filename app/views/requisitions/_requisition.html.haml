%a.list-group-item.construction-special-row{:href => "#{requisition_path(requisition)}"}
  .row
    .col-md-12
      %h4.pull-right
        %small
          -if requisition.locked
            = "Procesada"
          -else
            = "Pendiente"
      %table
        %tr
          %td
            %h4
              %span.label.label-info
                = [requisition.requisition_date.year, requisition.folio].join(' - ')
          %td
            %h4
              %small
                = [requisition.item_materials.count, " materiales agregados"].join(' ')
