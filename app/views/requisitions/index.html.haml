.page-header
  %h1
    = link_to @construction.title, construction_path(@construction)
    %small Requisiciones

%ul.nav.nav-tabs
  %li{id: 'all',class: " #{'active' if params[:type_list] == 'all'  or params[:type_list].nil? }"}
    = link_to 'Todos',requisitions_path(type_list: 'all', construction_id: params[:construction_id]),remote: true
  %li{id: 'pending',class: " #{'active' if params[:type_list] == Requisition::PENDING_STATUS }"}
    = link_to 'Pendientes',requisitions_path(type_list: Requisition::PENDING_STATUS, construction_id: params[:construction_id]),remote: true
  %li{id: 'partially',class: " #{'active' if params[:type_list] == Requisition::PARTIALLY_STATUS}"}
    = link_to 'Parcialmente',requisitions_path(type_list: Requisition::PARTIALLY_STATUS, construction_id: params[:construction_id]),remote: true
  %li{id: 'locked',class: " #{'active' if params[:type_list] == Requisition::LOCKED_STATUS}"}
    = link_to 'Procesadas',requisitions_path(type_list: Requisition::LOCKED_STATUS, construction_id: params[:construction_id]),remote: true

.list-group#requisitions
  = render partial: 'requisition', collection: @requisitions
  - if @requisitions.count == 0
    .well
      No hay requisiciones
