.page-header
  %h1
    - if current_user.administrator?
      = link_to @construction.title, construction_path(@construction)
    - else
      = link_to @construction.title, constructions_path(mode: :own)
    %small
      Requisicion
      %span{class: "label label-#{@requisition.status_color}"}
        = [@requisition.requisition_date.year, @requisition.folio.to_s.rjust(4, '0')].join(' - ')

  = react_component 'RequisitionArrival', itemMaterials: @item_materials_json, administrator: current_user.administrator?

- if current_user.administrator?
  %h1
    %small
      Ordenes de compra

  .list-group#purchase_orders
    = render partial: 'purchase_orders/purchase_order', collection: @purchase_orders
    -#maybe an  application partial also with requisition we use the same
    - if @purchase_orders.count == 0
      .well
        No hay ordenes de compra

  = link_to 'Nueva Orden de Compra', new_purchase_order_path(requisition_id: @requisition.id), {class: "btn btn-primary", type: "button"}