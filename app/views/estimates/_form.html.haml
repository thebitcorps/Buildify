=  simple_form_for(@estimate, html: { class: 'form-horizontal' }) do |f|
  = f.hidden_field :construction_id, value: @estimate.construction.id
  = f.input :amount, label: 'Cantidad'
  = f.input :payment_date, label: 'Fecha de pago',:as => :date_picker,id: 'datetimepicker'
  = f.button :submit, value: 'Crear', class: 'btn btn-primary'
  = link_to 'Cancelar', construction_path(@construction), class: 'btn btn-default'
