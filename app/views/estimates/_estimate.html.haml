%tr
  %td= estimate_counter + 1
  %td= number_to_currency(estimate.amount)
  %td= estimate.concept
  %td= spanish_formated_date(estimate.extension_date, false)
  %td
    - if estimate.completed?
      = spanish_formated_date(estimate.extension_date, false)
    - else
      %a{onclick: "window.completeEstimate(#{estimate.id})", class: 'btn btn-primary'}
        Terminar

  %td= link_to 'Remover', estimate_path(estimate), class: 'btn btn-danger', :method => :delete, :data => { :confirm => 'Â¿Esta seguro de que desea remover esta estimacion?' }