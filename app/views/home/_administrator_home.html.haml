.page-header
  .page-header
    .row
      .col-md-6
        .row
          %h1
            = 'Bienvenido'
            %small= link_to current_user.name, user_path(current_user)
      .col-md-6
        %h3.text-center
          %small= "Hoy " +  spanish_formated_date(Date.today, false)
= render :partial => 'constructions/payment_tabs'
.panel.panel-default
  .table-responsive
    %table.table.table-hover
      %thead
        %tr
          %th
            Factura
          %th
            Ordende compra
          %th
            Importe
          %th
            Pagado
          %th
            Saldo
          %th
            Pagos
          %th
      %tbody#payments
        - @acumulated_amount = 0
        - @acumulated_paid = 0
        = render partial: 'payment', collection: @payments