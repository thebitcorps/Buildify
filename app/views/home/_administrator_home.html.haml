.page-header
  .row
    .col-xs-12
      .row
        %h6.pull-right
          = ["Hoy es", spanish_formated_date(Date.today, false)].join(" ")

= render partial: 'constructions/balance', locals: {expenses: @balance[:expenses], paid: @balance[:paid]}
%hr
.col-md-8
  %h4 Facturas
  = render partial: 'constructions/payment_tabs'
  .table-responsive
    %table.table.table-hover
      %thead
        %tr
          %th
            Factura
          %th
            Orden de compra
          %th
            Importe
          %th
            Pagado
          %th
            Saldo
          %th
            Pagos
          %th
      %tbody#payments
        = render partial: 'payment', collection: @payments
.col-md-4
  .panel.panel-default
    .panel-heading Actividades
    .panel-body
      .panel_default_body
        = render_activities(@activities)

