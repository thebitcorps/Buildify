%h1 Proveedores
= simple_form_for :search, url: providers_path, method: :get,remote: true  do |f|
  .col-lg-6
    = f.search_field :query, class: 'form-control',onkeyup: "$('#submit').click();",autocomplete: 'off'
  = f.submit 'Buscar', class: 'btn btn-default',id: 'submit'
%br
%br

%ul.list-group#providers
  = render @providers
#paginate
  = paginate @providers,theme: 'twitter-bootstrap-3',remote: true
%br

= link_to 'Nuevo proveedor', new_provider_path, class: 'btn btn-primary'
