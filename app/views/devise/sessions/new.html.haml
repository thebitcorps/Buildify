#loginbox{style: 'margin-top:50px;', class: 'col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2'}
  .panel.panel-info
    .panel-heading
      %h4 Ingreso
    .panel-body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true
          = f.input :password, required: false
          = f.input :remember_me, label: 'Recordarme', as: :boolean if devise_mapping.rememberable?
        .form-actions
          = f.button :submit, 'Ingresar', class: 'btn btn-default'
      = render 'devise/shared/links'
